<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppCasaCambio.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppCasaCambio"
    xmlns:views="clr-namespace:AppCasaCambio.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="AppCasaCambio">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>-->

    <FlyoutItem Route="Home" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Inicio" Icon="homeicon.png" ContentTemplate="{DataTemplate views:HomePage}"/>
        <ShellContent Title="Operaciones" Icon="operationsicon.png" ContentTemplate="{DataTemplate views:Operations}"/>
        <ShellContent Title="Registrar" Icon="coinicon.png" ContentTemplate="{DataTemplate views:RegisterCoin}"/>
        <ShellContent Title="Reportes" Icon="reportsicon.png" ContentTemplate="{DataTemplate views:Reportes}"/>
        <ShellContent Title="Configuracion" Icon="configicon.png" ContentTemplate="{DataTemplate views:Configuration}"/>
    </FlyoutItem>

</Shell>
