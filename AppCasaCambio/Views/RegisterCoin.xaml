<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCasaCambio.Views.RegisterCoin"
             Title="Registrar Moneda">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label 
            Text="Registrar Nueva Moneda"
            FontSize="24"
            HorizontalOptions="Center" />

        <!-- Campo para el nombre de la moneda -->
        <Entry 
            x:Name="nombreMonedaEntry"
            Placeholder="Nombre de la Moneda"
            FontSize="18" />

        <!-- Campo para el valor de venta -->
        <Entry 
            x:Name="ventaMonedaEntry"
            Placeholder="Valor de Venta"
            FontSize="18"
            Keyboard="Numeric" />

        <!-- Campo para el valor de compra -->
        <Entry 
            x:Name="compraMonedaEntry"
            Placeholder="Valor de Compra"
            FontSize="18"
            Keyboard="Numeric" />

        <!-- BotÃ³n para registrar la moneda -->
        <Button 
            Text="Registrar Moneda"
            Clicked="OnRegistrarMonedaClicked"
            BackgroundColor="Green"
            TextColor="White"
            FontSize="18"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
