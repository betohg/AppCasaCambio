<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCasaCambio.Views.RegisterCoin"
             Title="Registrar Moneda"
             BackgroundColor="#F5F5F5">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label 
            Text="Registrar Nueva Moneda"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="#333" />

        <Frame Padding="10" CornerRadius="10" BackgroundColor="White" HasShadow="True">
            <VerticalStackLayout Spacing="15">
                <!-- Campo para el nombre de la moneda -->
                <Entry 
                    x:Name="nombreMonedaEntry"
                    Placeholder="Nombre de la Moneda"
                    FontSize="18"
                    TextColor="#333"
                    BackgroundColor="#F9F9F9"
                    Margin="0,0,0,10"/>

                <!-- Campo para el valor de venta -->
                <Entry 
                    x:Name="ventaMonedaEntry"
                    Placeholder="Valor de Venta"
                    FontSize="18"
                    Keyboard="Numeric"
                    TextColor="#333"
                    BackgroundColor="#F9F9F9"
                    Margin="0,0,0,10"/>

                <!-- Campo para el valor de compra -->
                <Entry 
                    x:Name="compraMonedaEntry"
                    Placeholder="Valor de Compra"
                    FontSize="18"
                    Keyboard="Numeric"
                    TextColor="#333"
                    BackgroundColor="#F9F9F9"
                    Margin="0,0,0,10"/>
            </VerticalStackLayout>
        </Frame>

        <!-- BotÃ³n para registrar la moneda -->
        <Button 
            Text="Registrar Moneda"
            Clicked="OnRegistrarMonedaClicked"
            BackgroundColor="#4CAF50"
            TextColor="White"
            FontSize="18"
            HorizontalOptions="Center"
            CornerRadius="10"
            Padding="10,5" />

    </VerticalStackLayout>
</ContentPage>